# Create a list of student names
students = ["Arshima", "Arshika", "Kaifa"]

# Create a list of tuples containing scores for each student
scores = [(85, 90, 88), (78, 82, 80), (92, 95, 93)]

# Create a dictionary where each key is a student's name and the value is a tuple of their scores
students_scores = {students[i]: scores[i] for i in range(len(students))}

# Print the dictionary
print("Students' scores:", students_scores)

# Example usage: Print the scores of a specific student
student_name = "Arshika"
if student_name in students_scores:
    print(f"{student_name}'s scores are: {students_scores[student_name]}")
else:
    print(f"Student {student_name} not found.")
